{
  "name": "pino-logflare",
  "version": "0.5.0",
  "description": "A transport for Pino v7 that sends messages to Logflare",
  "homepage": "https://github.com/logflare/pino-logflare",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev:cli": "node ./test/debug.js | node ./src/cli.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "ts-node ./test/e2e.ts",
    "test:api": "node ./test/mock-api.js",
    "test:cli": "./test/cli-test.sh",
    "format": "prettier --write .",
    "test:format": "prettier --check .",
    "lint": "oxlint ./src",
    "vsn": "node -e \"console.log(require('./package.json').version);\""
  },
  "bin": {
    "pino-logflare": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "pino",
    "pino-transport",
    "logflare",
    "logging"
  ],
  "author": "Zack Krida <sayhi@zackkrida.com> (https://zackkrida.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/logflare/pino-logflare.git"
  },
  "devDependencies": {
    "@babel/core": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-typescript": "^7.10.1",
    "@types/node": "^14.0.14",
    "@types/pumpify": "^1.4.1",
    "@types/split2": "^2.1.6",
    "@types/through2": "^2.0.36",
    "body-parser": "^1.20.2",
    "express": "^4.18.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "jest-mock-process": "^2.0.0",
    "oxlint": "^0.16.12",
    "pino": "^7.0.0",
    "pino-multi-stream": "^5.0.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "batch2": "^1.0.6",
    "commander": "^5.0.0",
    "fast-json-parse": "^1.0.3",
    "logflare-transport-core": "^0.3.3",
    "pino-abstract-transport": "^1.0.0",
    "pumpify": "^2.0.1",
    "split2": "^3.1.1",
    "through2": "^3.0.1"
  },
  "peerDependencies": {
    "pino": "^7.0.0"
  },
  "prettier": {
    "singleQuote": false,
    "semi": false,
    "arrowParens": "always"
  },
  "bugs": {
    "url": "https://github.com/logflare/pino-logflare/issues"
  },
  "directories": {
    "test": "test"
  }
}
